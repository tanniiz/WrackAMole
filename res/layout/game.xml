<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/bt_signOut"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="SignOut" />

    <Button
        android:id="@+id/bt_playPause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/bt_signOut"
        android:layout_marginTop="18dp"
        android:text="Play/Pause" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bt_signOut"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="19dp"
        android:text="Name :"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_name"
        android:layout_alignTop="@+id/bt_playPause"
        android:text="Time :"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/bt_bt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bt_bt1"
        android:layout_centerHorizontal="true"
        android:text="2" />

    <Button
        android:id="@+id/bt_bt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bt_bt1"
        android:layout_below="@+id/bt_bt1"
        android:layout_marginTop="89dp"
        android:text="4" />

    <Button
        android:id="@+id/bt_bt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bt_bt4"
        android:layout_alignBottom="@+id/bt_bt4"
        android:layout_alignLeft="@+id/bt_bt2"
        android:text="5" />

    <Button
        android:id="@+id/bt_bt6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bt_bt5"
        android:layout_alignBottom="@+id/bt_bt5"
        android:layout_alignLeft="@+id/bt_bt3"
        android:text="6" />

    <Button
        android:id="@+id/bt_bt7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bt_bt4"
        android:layout_below="@+id/bt_bt4"
        android:layout_marginTop="91dp"
        android:text="7" />

    <Button
        android:id="@+id/bt_bt8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bt_bt7"
        android:layout_alignBottom="@+id/bt_bt7"
        android:layout_alignLeft="@+id/bt_bt5"
        android:text="8" />

    <Button
        android:id="@+id/bt_bt9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bt_bt8"
        android:layout_alignLeft="@+id/bt_bt6"
        android:text="9" />

    <TextView
        android:id="@+id/tv_sequenceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_playPause"
        android:layout_centerHorizontal="true"
        android:text="Sequence"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/bt_bt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bt_bt2"
        android:layout_alignBottom="@+id/bt_bt2"
        android:layout_toLeftOf="@+id/bt_signOut"
        android:text="3" />

    <TextView
        android:id="@+id/tv_sequence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_sequenceText"
        android:layout_marginTop="18dp"
        android:text="1  2  3  4  5  6  7  8  9"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tv_legends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/bt_bt8"
        android:layout_below="@+id/tv_digitSymKey"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tv_digitSymKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_time"
        android:layout_below="@+id/bt_bt7"
        android:layout_marginTop="100dp"
        android:text="Digit-Symbol key :"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tv_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tv_name"
        android:layout_below="@+id/tv_time"
        android:text="Score :"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/bt_bt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_sequence"
        android:layout_marginTop="32dp"
        android:layout_toRightOf="@+id/tv_score"
        android:text="1" />

</RelativeLayout>
